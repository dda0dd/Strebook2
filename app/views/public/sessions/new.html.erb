<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mx-1 my-5 text-secondary border-bottom col-4"><b>ログイン</b></h2>
      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :name, "ニックネーム", class:"border-bottom" %><br />
          <%= f.email_field :name, autofocus: true, autocomplete: "name", placeholder: "はるちゃん", class:"border border-secondary text-secondary rounded" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード", class:"border-bottom" %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "半角英数字8文字以上", class:"border border-secondary text-secondary rounded" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-outline-info btn-sm mr-2" %>
          <%= render "public/shared/links" %>
          <%= link_to "ゲストログイン", customers_guest_sign_in_path, class: "btn btn-outline-secondary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>