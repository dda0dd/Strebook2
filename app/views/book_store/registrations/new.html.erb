<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mx-1 my-5 text-secondary border-bottom col-4"><b>新規会員登録</b></h2>
      <%= form_with model: @book_store, url: book_store_registration_path do |f| %>
        <%= render "book_store/shared/error_messages", resource: resource %>
        <table class="table table-borderless text-secondary mx-1 my-2">
          <tr>
        <!--<div class="field">-->
            <th><%= f.label :name, "書店名", class:"border-bottom" %></th>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "春書店", class:"text-secondary border rounded" %></td>
        <!--</div>-->
          </tr>
          <tr>
        <!--<div class="field">-->
            <th><%= f.label :email, "メールアドレス", class:"border-bottom" %></th><br />
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@email", class:"text-secondary border rounded" %></td>
        <!--</div>-->
          </tr>
          <tr>
        <!--<div class="field">-->
            <th><%= f.label :address, "住所", class:"border-bottom" %></th>
            <td><%= f.text_field :address, autofocus: true, placefield: "大阪府荒木町0-0-0000", placeholder: "大阪府荒木町0-0-0000", class:"text-secondary border rounded" %></td>
        <!--</div>-->
          </tr>
          <tr>
        <!--<div class="field">-->
            <th><%= f.label :age, "創立年齢", class:"border-bottom" %></th>
            <td><%= f.text_field :age, autofocus: true, placefield: "1857", placeholder: "1857", class:"text-secondary border rounded" %></td>
        <!--</div>-->
          </tr>
          <tr>
        <!--<div class="field">-->
            <th><%= f.label :telephone_number, "電話番号 [ハイフンなし]", class:"border-bottom" %></th>
            <td><%= f.text_field :telephone_number, autofocus: true, placefield: "00000000000", placeholder: "000000000000", class:"text-secondary border rounded" %></td>
        <!--</div>-->
          </tr>
          <tr>
        <!--<div class="field">-->
            <th><%= f.label :password, "パスワード", class:"border-bottom" %></th>
          <%# if @minimum_password_length %>
          <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
          <!--<%# end %><br />-->
            <td><%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字8文字以上", class:"text-secondary border rounded" %></td>
        <!--</div>-->
          </tr>
          <tr>
        <!--<div class="field">-->
            <th><%= f.label :password_confirmation, "確認用", class:"border-bottom" %></th><br />
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "半角英数字8文字以上", class:"text-secondary border rounded" %></td>
        <!--</div>-->
          </tr>
          <tr>
        <!--<div class="actions">-->
            <td><%= f.submit "新規登録", class:"text-center btn btn-outline-success btn-sm" %></td>
            <td><%= render "book_store/shared/links" %></td>
        <!--</div>-->
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>