<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mx-1 my-5 text-secondary border-bottom col-4"><b>ログイン</b></h2>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
      <div class="field">
        <%= f.label :メールアドレス, class:"border-bottom" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border border-secondary text-secondary rounded" %>
      </div>

      <div class="field">
        <%= f.label :パスワード, class:"border-bottom" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"border border-secondary text-secondary rounded" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-outline-info btn-sm" %>
        <%= render "admin/shared/links" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>
