<body class="d-flex flex-column vh-100">
  <header class="shadow-sm">
  	<nav class="navbar navbar-expand-lg navbar-light bg-light">
  	  <div class="container">
  	    <% if customer_signed_in? && !current_customer.guest? %>
					<%= link_to "マイページ", public_customer_path(current_customer), class:"text-secondary" %>
					<%= link_to "投稿一覧", public_posts_path, class:"text-secondary" %>
					<%= link_to "リクエスト", new_public_request_comment_path, class:"text-secondary" %>
					<%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"text-secondary" %>
				<% elsif book_store_signed_in? && !current_book_store.guest? %>
					<%= link_to "マイページ", book_store_book_store_path(current_book_store), class:"text-secondary" %>
					<%= link_to "リクエスト一覧", book_store_request_comments_path, class:"text-secondary" %>
					<%= link_to "投稿", new_book_store_post_path, class:"text-secondary" %>
					<%= link_to "ログアウト", destroy_book_store_session_path, method: :delete, class:"text-secondary" %>
				<% elsif admin_signed_in? %>
					<%= link_to "お客様一覧", admin_customers_path, class:"text-secondary" %>
				  <%= link_to "書店一覧", admin_book_stores_path, class:"text-secondary" %>
					<%= link_to "投稿一覧", admin_posts_path, class:"text-secondary" %>
					<%= link_to "リクエスト一覧", admin_request_comments_path, class:"text-secondary" %>
					<%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"text-secondary" %>
				<% elsif customer_signed_in? && current_customer.guest? %>
					<%= link_to "マイページ", public_customer_path(current_customer), class:"text-secondary" %>
					<%= link_to "投稿一覧", public_posts_path, class:"text-secondary" %>
					<%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"text-secondary" %>
				<% elsif book_store_signed_in? && current_book_store.guest? %>
					<%= link_to "マイページ", book_store_book_store_path(current_book_store), class:"text-secondary" %>
					<%= link_to "リクエスト一覧", book_store_request_comments_path, class:"text-secondary" %>
					<%= link_to "ログアウト", destroy_book_store_session_path, method: :delete, class:"text-secondary" %>
				<% else %>
					<%= link_to "About", about_path, class:"text-secondary" %>
					<%= link_to "新規登録", new_customer_registration_path, class:"ml-2 text-secondary" %>
					<%= link_to "ログイン", new_customer_session_path, class:"text-secondary" %>
				<% end %>
			</div>
		</nav>
	</header>
</body>